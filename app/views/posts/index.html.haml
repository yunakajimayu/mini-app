  .header
    .header__name
      BLOGGG
    .header__logo
      .header__logo4
        %li
          %a{:href => "/posts/new"} 新規投稿       
      .header__logo3
        %li
          %a{:href => "/users/sign_in"} 
            サインイン
      .header__logo2
        %li
          %a{:href => "/users/sign_up"} 新規登録
      .header__logo1  
